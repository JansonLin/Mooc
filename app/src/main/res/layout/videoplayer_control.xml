<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/bg_player_top_control"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_current_time"
                android:text="当前时间"
                android:layout_marginLeft="5dip"

                android:layout_gravity="center_vertical"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:maxHeight="6dip"
                android:minHeight="6dip"

                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_duration"
                android:text="总时长"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="vertical">
        <LinearLayout

            android:background="@drawable/bg_player_bottom_control"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_paly_pause"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_pause_selector"
                android:layout_width="71dp"
                android:layout_height="40dp" />



        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="@drawable/bg_player_status"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="我是标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_player_top_control"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/btn_voice"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_voice_selector"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <SeekBar
android:id="@+id/seekbar_voice"

                android:maxHeight="6dip"
                android:minHeight="6dip"

                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_fullscreen"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_full_screen_normal"
                android:layout_width="71dp"
                android:layout_height="40dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>