<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/course_preview_course"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="计算机"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#008B00"
            android:textSize="12dp"
            android:text="查看全部>"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
       <com.imdevil.mooc.ImageTextButton
           android:id="@+id/course_preview_button_1"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
       </com.imdevil.mooc.ImageTextButton>
        <com.imdevil.mooc.ImageTextButton
            android:id="@+id/course_preview_button_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </com.imdevil.mooc.ImageTextButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <com.imdevil.mooc.ImageTextButton
            android:id="@+id/course_preview_button_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </com.imdevil.mooc.ImageTextButton>
        <com.imdevil.mooc.ImageTextButton
            android:id="@+id/course_preview_button_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </com.imdevil.mooc.ImageTextButton>
    </LinearLayout>




</LinearLayout>